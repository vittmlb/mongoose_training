<script src="lib/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
<script src="lib/angular-animate/angular-animate.min.js"></script>
<script src="lib/angular-sanitize/angular-sanitize.min.js"></script>
<script src="lib/ngToast/dist/ngToast.min.js"></script>

<!--Plugins-->
<script src="https://use.fontawesome.com/f474efa969.js"></script>

<!--Scripts Produtos-->
<script src="./application.js"></script>
<script src="./produtos/produtos.client.module.js"></script>
<script src="./produtos/controllers/produtos.client.controller.js"></script>
<script src="./produtos/services/produtos.client.service.js"></script>
